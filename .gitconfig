[color]
	status = auto
	diff = auto
	branch = auto
	interactive = auto
	grep = auto
[alias]
	co = checkout
	ci = commit -a
	st = status
	up = pull --rebase
	br = branch
	si = submodule init
	su = submodule update
	cl = clone --recursive
	pr = fetch origin '+refs/pull/*:refs/remotes/pr/*'
[core]
	quotepath = false
[github]
	user = user
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[diff]
	compactionHeuristic = true
