[include]
	path = .gitconfig.local
[color]
	status = auto
	diff = auto
	branch = auto
	interactive = auto
	grep = auto
[push]
	default = tracking
[branch]
	autosetuprebase = always
[merge]
	ff = false
[pull]
	rebase = true
[alias]
	co = checkout
	ci = commit -a
	s = status --short --branch
	st = status
	b = branch
	br = browse-remote
	si = submodule init
	su = submodule update
	cl = clone --recursive
	bk = "!f() { git branch $1_bk`date \"+%Y%m%d%H%M%S\"`$2; }; f"
	ｐｒ = "!f() { git fetch $1 '+refs/pull/*:refs/remotes/pr/*'; }; f"
	#pr = fetch origin '+refs/pull/*:refs/remotes/pr/*'
[core]
	quotepath = false
	excludesfile = ~/.gitignore
[github]
	user = user
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[diff]
	compactionHeuristic = true

# git-browse-remote
# http://subtech.g.hatena.ne.jp/motemen/20120917/1347889804
[web]
	browser = google-chrome
[browse-remote "github.com"]
	top = https://{host}/{path}
	ref = https://{host}/{path}/tree/{short_ref}
	rev = https://{host}/{path}/commit/{commit}
